<Window x:Class="list_elements.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:list_elements"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel DataContext="Product">
        <Button Name="editing" Click="editing_Click">editing</Button>
        <ListView Name="ListView"></ListView>
        <TextBlock>name</TextBlock>
        <TextBox Name="name"></TextBox>
        <TextBlock>amount</TextBlock>
        <TextBox Name="amount"></TextBox>
        <TextBlock>measure unit</TextBlock>
        <ComboBox Name="meas_unit">
            <ComboBoxItem>gram</ComboBoxItem>
            <ComboBoxItem>milliliter</ComboBoxItem>
            <ComboBoxItem>thing</ComboBoxItem>
        </ComboBox>
        <Button Name="addendum" Click="addendum_Click">addendum</Button>
    </StackPanel>
</Window>